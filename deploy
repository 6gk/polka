#!/bin/sh
exec 2>/dev/null

if [ "$1" = y ]; then
	y=y
else
	printf '[press the damn button, fool] '
	read -r y
fi

[ "$y" = y ] || exit

mkdir -p      \
	~/bin/app   \
	~/bin/bin   \
	~/etc       \
	~/usr/cache \
	~/opt

ln -sf "$PWD/bin/"* ~/bin/
ln -sf "$PWD/etc/"* ~/etc/
ln -sf "$PWD/usr/"* ~/usr/
