# terminal
super + Return
	st

super + slash
	ros $HOME/bin

super + period
	rofi-sc

super + space
	rofi -show run

# copy epic may mays
super + u
	copymaymays


# don't send `ctrl + q` events to firefox
ctrl + q
	ctrlq


super + f
	firefox

ctrl + alt + f
	firefox --private-window


# power menu
super + h
	pm


# un/mount drives
ctrl + alt + {m,u}
	dmenu{_,u}mount


super + i
	rofi-emoji


# restart wifi
ctrl + alt + w
	nmcli networking off && sleep 0.5 && nmcli networking on


# send a notif of the time and battery
super + {t, shift + F1}
	notify-send "$(date "+%F (%a) - %H:%M")" \
	"$(acpi)"


# change theme
ctrl + alt + s
	ts.sh


alt + grave
	dropdown

# I have this key bound on my mouse
super + shift + F2
	h="$(colorpicker -doq | tr -d '#\n')"; \
	echo -n $h | xclip -sel clip;          \
	notify-send "$h" "<span background=\"#$h\">      </span>"



#
#   screenshots
#
{_,super, shift} + Print
	scr {_,-f,-s}

super + z
	xclip -selection clipboard -t image/png $HOME/opt/x/pics/maim/$(ls \
	-1t $HOME/opt/x/pics/maim/ --ignore old | head -1)


super + {Insert, Home, Prior, End}
	blaze {_,-c -p k, -c -p k -b 7,-s}


#
#   media
#
XF86Audio{Prev,Next,Play,Stop,Mute}
	vol {prev, next, p, stop, m}

XF86Audio{Raise,Lower}Volume
	vol {up,down}

super + {p, Tab}
	vol {p, mw}

#super + s
#	players.sh


#
#   laptop
#
ctrl + alt + t
	synclient TouchpadOff={0,1}
