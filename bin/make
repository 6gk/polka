#!/bin/sh

dewit() {
	printf '\033[35m $ %s \033[0m\n' "$*"
	"$@"
}

PATH=$(echo "$PATH" | sed "s|${0%/*}:||")
dewit git submodule update --init --recursive
set -e
if [ -e "Makefile" ]; then
	[ "$1" = install ] &&
		dewit exec sudo make install

	dewit make "$@"
elif [ -e "meson.build" ]; then
	[ "$1" = install ] &&
		dewit exec sudo ninja -C build install

	dewit meson build
	dewit exec ninja -C build
elif [ -e "make.sh" ]; then
	chmod +x make.sh
	dewit ./make.sh "$@"
elif [ -e "configure" ]; then
	dewit ./configure
	dewit exec make
elif [ -e "autogen.sh" ]; then
	dewit ./autogen.sh
	dewit ./configure
	dewit exec make
fi
