#!/bin/sh
  i3lock \
    --color 1e2127\
    --insidecolor=1e2127ff\
    --insidewrongcolor=1e2127ff\
    --ringwrongcolor=e06c75ff\
    --ringvercolor=61afefff\
    --insidevercolor=1e2127ff\
    --ringcolor=262a32ff\
    --verifcolor=ccccccff\
    --wrongcolor=ccccccff\
    --keyhlcolor=61afefff\
    --bshlcolor=e06c75ff &
timeout="10000"
while pgrep -x i3lock; do
  [[ $timeout -lt $(xssstate -i) ]] && xset dpms force off
  sleep 5
done
