# terminal
super + Return
	st

{alt + x, shift + super + F3}
	draw

super + b
	b

super + g
	sddg

super + slash
	ros ~/opt/scs

super + period
	rofi-sc

super + space
	launch

# copy epic may mays
super + u
	copymaymays


# don't send `ctrl + q` events to firefox
ctrl + q
	ctrlq


super + f
	firefox

ctrl + alt + f
	firefox --private-window


# power menu
super + h
	pm


# un/mount drives
ctrl + alt + {m,u}
	{_,u}mnt


super + i
	rofi-emoji


# restart wifi
ctrl + alt + w
	nmcli networking off && sleep 0.5 && nmcli networking on


# send a notif of the time and battery
super + t
	notify-send "$(date "+%F (%a) - %H:%M")" \
	"$(acpi)"


# change theme
ctrl + alt + s
	ts.sh


alt + grave
	dropdown

# I have this key bound on my mouse
super + shift + F2
	h="$(colorpicker -doq | tr -d '#\n' | tr "[[:upper:]]" "[[:lower:]]")"; \
	echo -n $h | xclip -sel clip;          \
	notify-send "$h" "<span background=\"#$h\">      </span>"

ctrl + alt + {1-9,0}
	hw {1-9,0}


#
#   screenshots
#
{_,super, shift} + Print
	scr {_,-f,-s}

# mouse bind
super + shift + F1
	scr -s

super + z
	xclip -selection clipboard -t image/png $HOME/opt/x/pics/$(ls \
	-1t $HOME/opt/x/pics/ --ignore old | head -1)

super + {Insert, Home, Prior, End}
	blaze {_,-c -p k, -c -p k -b 7,-s}


#
#   media
#
XF86Audio{Prev,Next,Play,Stop,Mute}
	vol {prev, next, p, stop, m}

XF86Audio{Raise,Lower}Volume
	vol {up,down}

super + {p, Tab}
	vol {p, mw}

#super + s
#	players.sh


#
#   laptop
#
ctrl + alt + t
	synclient TouchpadOff={0,1}
