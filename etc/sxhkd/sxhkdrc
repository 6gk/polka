ctrl + alt + {1-9,0}
	hw {1-9,0}


#
#   screenshots
#
{_,super, shift} + Print
	scr {_,-F,-S}

# mouse bind
XF86Tools
	scr -S

super + z
	xclip -selection clipboard -t image/png $HOME/opt/x/pics/$(ls \
	-1t $HOME/opt/x/pics/ --ignore old | head -1)

super + {Insert, Home, End}
	scr {-r,-c -p k,-s}


#
#   media
#
XF86Audio{Prev,Next,Play,Stop,Mute}
	vol {prev, next, p, stop, m}

XF86Audio{Raise,Lower}Volume
	vol {up,down}

super + {p, Tab}
	vol {p, mw}

