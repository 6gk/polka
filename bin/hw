#!/bin/sh -x
#  hide window

dir="$XDG_CACHE_HOME/hw"
mkdir -p "$dir"
read -r win < "$dir/$1"

[ "$1" = 0 ] && {
	rm "$dir"/*
	exit
}

if [ -e "$dir/$1" ]; then
	wname "$win" ||
		rm "$dir/$1"
else
	win="$(pfw)"
	echo "$win" > "$dir/$1"
fi

#mapw -t "$win"
bspc node "$win" -g hidden -t floating
bspc node "$win" -d "$(bspc query -D -d)" -f
