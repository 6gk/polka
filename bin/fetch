#!/bin/bash

red="\e[31m"
grn="\e[32m"
ylw="\e[33m"
cyn="\e[36m"
blu="\e[34m"
prp="\e[35m"
bprp="\e[35;1m"
rst="\e[0m"

echo

os="$(source /etc/os-release; echo $ID )"   # Get distro
sh="$(echo "${SHELL##*/}")"   # Get default shell 
id="$(xprop -root -notype _NET_SUPPORTING_WM_CHECK 2>/dev/null | awk '{print $5}' )"   # Get window manager
wm="$(xprop -id "$id" -notype -len 100 2>/dev/null | awk /WM_NAME/ | awk '!/_NET_WM_NAME/' | awk '{print $3}' | awk '{gsub("\"", ""); print}')"   # Get window manager Part 1
term="$(xprop -id $WINDOWID WM_CLASS | awk '{print $3}' | awk '{gsub("\"", ""); gsub(",", ""); print}' )"   # Get terminal emulator Part 2

colour-printf() { #Prints $1 in blue, and $2 in white, with padding between them
    printf " ${blu}${1}${rst}" 
    printf "%9s" "${2,,}"
    printf "\n"
}

colour-printf "os  "   "$os"     # print distro
colour-printf "sh  "   "$sh"     # Print shell of user
colour-printf "wm  "   "$wm"     # Print Window Manager
colour-printf "term"   "$term"   # Print terminal emulator

echo -e "  $red▲$rst $grn▼$rst $ylw▲$rst $blu▼$rst $prp▲$rst $cyn▼$rst  " #▼▲

echo
