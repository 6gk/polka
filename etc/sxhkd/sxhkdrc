#
#  ,=,e
#

super + Return
	st

super + slash
	dms ~/opt/scs

super + period
	dmsc

super + space
	launch

super + {j,y,u,i}
	{react, memeaker, copy, emoji}

super + f
	chromium


# power menu
super + h
	pm


# un/mount drives
ctrl + alt + {m,u}
	{_,u}mnt


# restart wifi
ctrl + alt + w
	nmcli networking off && sleep 0.5 && nmcli networking on


# send a notif of the time and battery
super + t
	notify-send "$(date "+%F (%a) - %H:%M")" \
	"$(acpi)"


# change theme
ctrl + alt + s
	ts.sh

# I have this key bound on my mouse
XF86Launch6
	picker

super + shift + {1-9,0}
	hw {1-9,0}


#
#   screenshots
#
Print
	scr -G$(6r f -f)

# selection
{shift + Print, XF86Tools}
	freeze & scr -S; pkill freeze

super + z
	xclip -selection clipboard -t image/png $HOME/opt/x/scr/$(ls \
	-1t $HOME/opt/scr --ignore old | head -1)

super + {Insert, Home, Next, Prior, End}
	scr {_,-c -pwnd,-c -e,-c -pro -a -r60 -b8,-s}


#
#   media
#
XF86Audio{Prev,Next,Play,Stop,Mute}
	vol {prev, next, p, stop, m}

XF86Audio{Raise,Lower}Volume
	vol {up,down}

shift + XF86Audio{Raise,Lower}Volume
	vol {up,down} 1

super + {p, Tab}
	vol {p, mw}


#
#   laptop
#
ctrl + alt + t
	synclient TouchpadOff={0,1}
