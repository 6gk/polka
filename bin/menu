#!/bin/sh
#
#   Use fzf as a replacement for rofi/dmenu.
#

pgrep -x fzf >/dev/null && exit 1

rm /tmp/fzfmenu*
cat > /tmp/fzfmenu

while [ "$1" ]; do
	case $1 in
		-p) prompt="$2"; shift;;
	esac
	shift
done

st -c floating -e sh -c \
	"</dev/tty fzf --no-hscroll --cycle --pointer=' ' --height=20 --info=hidden --layout=reverse --prompt=' $prompt | ' --no-bold --color='bg+:0,gutter:-1,fg+:15,fg:7,prompt:16,hl:7,hl+:15' < /tmp/fzfmenu > /tmp/fzfmenuout" || exit 1
cat /tmp/fzfmenuout
