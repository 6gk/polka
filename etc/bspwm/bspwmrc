#!/bin/sh
#
#  bspwmrc
#

_() { bspc config "$@";  }
R() { bspc rule -a "$@"; }
s() { pkill -x "$1"; { sleep 0.1; "$@" & }; }

# desktops
bspc monitor -d      1 2 3 4 5 6
bspc monitor DVI-D-0 -d  7 8 9 0
# fix ordering
bspc monitor DVI-D-0 -s HDMI-0
# focus first/last desktops
pgrep sxhkd || bspc desktop -f ^10 -f ^1

# mouse
xsetroot -cursor_name      left_ptr
_ pointer_modifier         mod4
_ focus_follows_pointer    true
_ pointer_follows_focus    false
_ pointer_motion_interval  5


# borders/gaps
_ window_gap    20
_ border_width  0
_ single_monocle      true
_ gapless_monocle     true
_ borderless_monocle  true

_ normal_border_color       '#151823'
_ active_border_color       '#151823'
_ focused_border_color      '#151823'


#
#   rules
#
R feh       state=floating
R freeze    state=floating border=off monitor="$(6r names -p)"
R tabbed    state=floating
R Gcolor3   state=floating
R floating  state=floating


#
#   autostart
#
s picom
s dunst
s sxhkd
[ -e "$XDG_CONFIG_HOME/bspwm/other" ] && . "$XDG_CONFIG_HOME/bspwm/other"

# bspwm-specific keybindings
sxhkd -c "${XDG_CONFIG_HOME:-~/.config}/sxhkd/bspwm" &
