#!/usr/bin/env bash

dir=~/Stuff/Screenshots/maim
name="maim-$(date +%F_%H:%M:%S)"

mkdir -p "$dir" || exit 1

maim -su -l -c 0.92549,0.67451,0.52941,0.2 -b 1 -p -2 "${dir}/${name}.png" &&
	name1="${name}-$(file ${dir}/${name}.png | awk '{gsub(",","")} {print $5 "x" $7}')" &&
	mv ${dir}/${name}.png ${dir}/${name1}.png &&
	notify-send "Screenshot of selection taken at ${dir}/${name1}.png"

