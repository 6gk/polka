#!/usr/bin/env bash

thing=( $(xrandr --query | grep 'primary' | \
	grep -o '[0-9][0-9]*x[0-9][0-9]*[^ ]*' | \
	sed -e 's/x/ /g' -e 's/+/ /g') )

offX="$(( ${thing[0]} + ${thing[2]} - 320 - 50 ))"
offY="$(( ${thing[3]} + 50 ))"

feh -g 320x200+$offX+$offY -. -B "#000000" "$1" &
feh="$!"

(sleep 0.1; xdotool key \
	--window "$(xdotool search --classname minecraft)" w)

sleep 2; kill -- $feh
