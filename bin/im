#!/bin/sh

## center on main monitor
#set -- $(mattr whxy "$(lsm -p)") "$@"
#x="$(( $3 + $1 - ( $1 / 2 ) - ( 1000 / 2 ) ))"
#y="$(( $4 + $2 - ( $2 / 2 ) - (  700 / 2 ) - 17 ))"
#shift 4

f() { feh -Z. -g 1000x700 "$@" & }
[ "$#" -gt 1 ] && { f "$@"; exit; }

case "$1" in
	http*)  f "$1";;
	*)      f --scale-down --start-at "$1" "$(dirname "$1")";;
esac
