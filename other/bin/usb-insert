#!/usr/bin/env bash

display=":$(/usr/bin/ls /tmp/.X11-unix/* | sed 's#/tmp/.X11-unix/X##' | head -n 1)"
user=$(w | grep -i "xinit\|x11\|x$" | awk '{print $1}' | sed -n -e 1p)
uid=$(id -u $user)

out="$(printf "Brand:"
printf "%40s" "${ID_VENDOR_ENC//x20/ }​\n"
printf "Product:"
printf "%38s" "${ID_MODEL_ENC//x20/ }​"
)"

sudo -u $user bash -c "DISPLAY=$display XDG_RUNTIME_DIR=/run/user/$uid DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/$uid/bus /usr/bin/notify-send 'New device detected' '$out'"

sudo -u $user bash -c "DISPLAY=$display XDG_RUNTIME_DIR=/run/user/$uid DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/$uid/bus /usr/bin/paplay /usr/local/sounds/usb-insert.wav"
