#!/bin/sh
#
#   double borders (on) any wm
#

outer='0x0D0D0F'   # outer
inner1='0x7baae8'  # focused
inner2='0xc488ec'  # normal

chwb -s 10   # make the borders 10px wide, doesn't work on bspwm

draw() { chwb2 -I "$i" -O "$o" -i "2" -o "8" $@ 2> /dev/null; }

# initial draw, and then subscribe to events
{ echo; wew -m XCB_PROPERTY_NOTIFY; } |
	while read -r _; do
		i=$inner2 o=$outer draw "$(lsw)"
		i=$inner1 o=$outer draw "$(pfw)"
	done
