#!/usr/bin/env bash

#set -x

accent="#f6b2b6"
fglight="#ccccee"

if [[ $(bspc query -T -d | jq -r .layout) != monocle ]]; then
	echo "" 
	exit
fi
if [[ $(bspc query -N -n .window -d focused | wc -l) = 1 ]]; then
	echo "" 
	exit
fi

curname="$(bspc query -N -n)"
for i in $(bspc query -N -n .window -d focused); do
	if [[ $curname = $i ]]; then
		echo -en "%{F$accent}● " 
	else
		echo -n "%{F$fg}● "
	fi
done
echo
