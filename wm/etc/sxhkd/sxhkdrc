# terminal
super + Return
	st


# don't send `ctrl + q` events to firefox
ctrl + q
	ctrlq


super + f
	firefox


# power menu
super + h
	pm


# un/mount drives
ctrl + alt + {m,u}
	dmenu{_,u}mount


super + i
	rofi-emoji


# restart wifi
ctrl + alt + w
	nmcli networking off && sleep 0.5 && nmcli networking on


# send a notif of the time and battery
super + {t, shift + F1}
	notify-send "$(date "+%a %d %b - %I:%M %p")\n$(acpi)"


# change theme
ctrl + alt + s
	ts.sh


alt + grave
	dropdown.sh


#
#   screenshots
#
{_,super, shift} + Print
	scr {_,-f,-s}

super + z
	xclip -selection clipboard -t image/png $HOME/opt/x/pics/maim/$(ls \
	-1t $HOME/opt/x/pics/maim/ --ignore old | head -1)


ctrl + alt + {Insert, Home, End}
	blaze {_,-c -p k,-s}


#
#   media
#
XF86Audio{Prev,Next,Play,Stop,Mute}
	vol {prev, next, p, stop, m}

super + {p, Tab}
	vol {p, mw}

super + s
	players.sh


#
#   laptop
#
{super,ctrl} + alt + t
	synclient TouchpadOff={0,1}
