#!/bin/sh
#
#  Source:
#     github.com/GaugeK/dots
#

sound="/usr/share/sounds/freedesktop/stereo/complete.oga"

calc() {
	seconds="$(echo "${1}*$2" | bc | sed 's/\..*$//')"
}

case "$1" in
	*h) calc "${1%?}" 3600;;
	*m) calc "${1%?}"   60;;
	*s) seconds="${1%?}"  ;;
	*)  calc "$1"       60;;
esac

{
	sleep "$seconds"

	paplay "$sound" 2>/dev/null &
	notify-send -u critical "Timer finished" "$2"
} &
