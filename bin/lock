#!/usr/bin/env bash
pgrep i3lock &>/dev/null && exit
cache="${XDG_CACHE_HOME:-~/.cache}/lock.png"
wp="$HOME/opt/git/Wallpapers/Wallpaper_lock.png"

shotgun "$wp"
ffmpeg -y -i "$wp" \
	-filter_complex "boxblur=15" -vframes 1 \
	"$cache" -loglevel quiet

xrandr=$(xrandr --query | grep ' connected')
SR=$(grep -o '[0-9][0-9]*x[0-9][0-9]*[^ ]*' <<< $xrandr )

for RES in $SR; do
	SRA=(${RES//[x+]/ })
	CX=$((SRA[2] + 25))
	CY=$((SRA[1] - 30))
	rectangles+="rectangle $CX,$CY $((CX+280)),$((CY-100)) "
done

! [[ -e $cache ]] && convert "$wp" -draw "fill #00000044 $rectangles" "$cache"


i3lock \
	\
	--ring-width=4 \
	--line-uses-inside \
	--radius=20 \
	--timepos='x+130:h-80' \
	--datepos='x+130:h-55' \
	--indpos='x+260:h-80' \
	--veriftext='' \
	--wrongtext='' \
	--indicator \
	--clock \
	--indicator \
	--bshlcolor=d86880ff \
	--timecolor=cccceeff \
	--datecolor=cccceeff \
	--ringcolor=8888a0ff \
	--verifcolor=cccceeff \
	--wrongcolor=d86880ff \
	--keyhlcolor=cccceeff \
	--insidecolor=15171d00 \
	--ringvercolor=cccceeff \
	--insidevercolor=15171d00 \
	--ringwrongcolor=dc8195ff \
	--insidewrongcolor=15171d00 \
	--time-font="Roboto Condensed" \
	--date-font="Roboto Condensed" \
	--image=$cache
