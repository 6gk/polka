#!/bin/sh

#     ---
#   Settings 
#     ---

bspc monitor -d 1 2 3 4 5
bspc monitor DVI-D-0 -d 6 7

while read -r line; do
    test "$line" && bspc config $line
done << EOF

focus_follows_pointer true
borderless_monocle true
gapless_monocle true
single_monocle true

presel_feedback_color #EEEEEE
focused_border_color #447bbe
normal_border_color #1a1f2e

border_width 3
window_gap 20

pointer_modifier mod1
EOF

#      -----
#   Window Rules
#      -----

bspc rule -a tabbed state=floating
bspc rule -a dolphin state=floating
bspc rule -a qView state=floating
bspc rule -a ksysguard state=floating
bspc rule -a floating state=floating
