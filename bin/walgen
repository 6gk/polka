#!/usr/bin/env bash
#
#  Generate a wallpaper with some static
#        gitlab.com/GaugeK/dots
#

#bg="#dde1e6"  # Snow
#bg="#383f50"  # Winter
#bg="#213541"  # Coral

[[ -n $1 ]] && bg="$1" || bg="#dde1e6"

fi="$HOME/Wallpapers/tile.png"

convert -size 128x128 xc:"$bg" -separate -seed 1000 -attenuate 0.13 +noise gaussian -combine -colorspace sRGB $fi

feh --bg-tile $fi
