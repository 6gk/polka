#!/bin/sh

. ~/etc/colours/current

bar() {
	raw=$(vol get)
	vol=${raw%% *}
	[ "$raw" != "$vol" ] && fg1=$red
	vol=$((vol/5))
	i=1
	printf "<span background='#$fg1'>"
	while [ "$i" -le 20 ]; do
		[ "$i" = "$vol" ] && printf "</span><span background='#$fg2'>"
		printf ' '
		i=$((i+1))
	done
	printf "</span>"
}

dunstify -u low -t 700 -r 9955 "$1" "$(bar)"
