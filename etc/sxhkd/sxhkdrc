#
#  ,=,e
#

super + Return
	st

{alt + x, shift + super + F3}
	draw

super + v
	firefox 0.0.0.0:9091

super + g
	sddg

super + slash
	ros ~/opt/scs

super + period
	rofi-sc

super + space
	launch

# copy epic may mays
super + u
	copymaymays


# don't send `ctrl + q` events to firefox
ctrl + q
	ctrlq


super + f
	firefox

ctrl + alt + f
	firefox --private-window


# power menu
super + h
	pm


# un/mount drives
ctrl + alt + {m,u}
	{_,u}mnt


super + i
	rofi-emoji


# restart wifi
ctrl + alt + w
	nmcli networking off && sleep 0.5 && nmcli networking on


# send a notif of the time and battery
super + t
	notify-send "$(date "+%F (%a) - %H:%M")" \
	"$(acpi)"


# change theme
ctrl + alt + s
	ts.sh


alt + grave
	dropdown

# I have this key bound on my mouse
