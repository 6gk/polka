#!/bin/sh
lock_then_off() {
  i3lock --color 1e2127 --insidecolor=#1e2127ff  --insidewrongcolor=1e2127ff --ringwrongcolor=e06c75ff --ringvercolor=61afefff --insidevercolor=1e2127ff --ringcolor=262a32ff --verifcolor=ccccccff --wrongcolor=ccccccff --keyhlcolor=61afefff --bshlcolor=e06c75ff &
  sleep 10
  xset dpms force off
};
lock_then_off