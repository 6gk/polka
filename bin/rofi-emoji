#!/usr/bin/env bash

chosen=$(grep -v "#" ~/.config/emoji | \
	rofi -dmenu \
	-columns 2 \
	-kb-row-select "Tab" -kb-row-tab "" \
                 -i)

[ "$chosen" != "" ] || exit

c=$(echo "$chosen" | sed "s/ .*//")
echo "$c" | tr -d '\n' | xclip -selection clipboard
notify-send "'$c' copied to clipboard." &

s=$(echo "$chosen" | sed "s/.*; //" | awk '{print $1}')
echo "$s" | tr -d '\n' | xclip
notify-send "'$s' copied to primary." &
