#	ts.sh; refresh

alt + grave
	dropdown.sh

#alt + q
#	xdotool getwindowfocus windowclose

#super + q
#	xdotool getwindowfocus windowkill

super + s
	players.sh

alt + x
	select_st

{_,super, shift} + Print
	scr {_,-f,-s}

ctrl + alt + {d,x,c}
	scr {_,-s,-f}

super + z
	xclip -selection clipboard -t image/png $HOME/Stuff/Screenshots/maim/$(ls -1t $HOME/Stuff/Screenshots/maim/ --ignore old | head -1)

ctrl + alt + {Prior, Home, Insert, End}
	blaze {-c -p k -B 8, -c -p k,_,-s}

#    ---
#   bspwm
#    ---

super + q
	bspc node -k

alt + q
	bspc node -c

alt + c
	bspc node -p cancel

#super + r
#	bspc node -n last.!automatic -t tiled

super + {r,m}
	bspc desktop -l {tiled,monocle}

super + {_,shift} + Escape
	wm {restart,quit}

super + {d,a}
	bspc node -t "~{floating,fullscreen}"

super + {_,ctrl,alt,shift} + {Left,Down,Up,Right}
	{focus,move,resize,bspc node -p} {west,south,north,east}

shift + alt + {Right,Left}
	DIR={next,prev}; \
	bspc node -d "$DIR"; \
	bspc desktop -f "$DIR"; \
	nottop

ctrl + alt + {Right,Left}
	bspc desktop -f {next,prev}; \
	nottop

ctrl + super + {1,2,3,4,5,6,7}
	bspc node -d {1,2,3,4,5,6,7}; \
	nottop

super + {1,2,3,4,5,6,7}
	bspc desktop -f {1,2,3,4,5,6,7}; \
	nottop

alt + Tab
	bspc node -f next;

alt + shift + Tab
	bspc node -f prev;

super + alt + 0
	gaps r

super + alt + equal
	gaps up

super + alt + minus
	gaps down




#    ---
#   Media
#    ---

{XF86AudioPrev, super + comma}
	vol prev

{XF86AudioNext, super + period}
	vol next

{XF86AudioPlay, super + p, ctrl + alt + a}
	vol p

{XF86AudioRaiseVolume, super + u}
	vol up

{XF86AudioLowerVolume, super + j}
	vol down

XF86AudioStop
	vol stop

XF86AudioMute
	vol m
