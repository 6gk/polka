#!/bin/sh

. ~/etc/colours/current

bar() {
	raw=$(vol get)
	vol=${raw%% *}
	[ "$raw" != "$vol" ] && fg1=$red
	vol=$((vol/6))
	for i in $(seq 16); do
		[ "$i" -le "$vol" ] && op=ff
		#[ "$i"  =  "$vol" ] && op=dd
		[ "$i" -gt "$vol" ] && op=bb
		printf '%s' "%{F#$op$fg1}â–ˆ" && continue
	done
}

notlemon "$1" -- "$(bar)"
