#!/bin/bash
#set -x
pgrep i3lock &>/dev/null && exit
cache="$HOME/.cache/lock.png"
wp="$HOME/Wallpapers/Wallpaper_lock.png"

case $1 in
	-r) rm ~/.cache/lock.png;;
	-w) rm ~/.cache/lock.png;
		wp="$2";;
esac


#scrot "/tmp/lock.png"
#ffmpeg -y -i /tmp/lock.png \
#	-filter_complex "boxblur=15" -vframes 1 \
#	/tmp/lock_blur.png -loglevel quiet

SR=$(xrandr --query | grep ' connected' | grep -o '[0-9][0-9]*x[0-9][0-9]*[^ ]*')

for RES in $SR; do
	SRA=(${RES//[x+]/ })
	CX=$((SRA[2] + 25))
	CY=$((SRA[1] - 30))
	rectangles+="rectangle $CX,$CY $((CX+280)),$((CY-100)) "
done

! [[ -e ~/.cache/lock.png ]] && convert "$wp" -draw "fill #00000044 $rectangles" "$HOME/.cache/lock.png"

i3lock \
	\
	--ring-width=4 \
	--line-uses-inside \
	--radius=20 \
	--timepos='x+130:h-80' \
	--datepos='x+130:h-55' \
	--indpos='x+260:h-80' \
	--veriftext='' \
	--wrongtext='' \
	--indicator \
	\
	--clock \
	--bshlcolor=e09b70ff \
	--timecolor=cccceeff \
	--datecolor=cccceeff \
	--ringcolor=cccceeff \
	--verifcolor=ccccccff \
	--wrongcolor=ccccccff \
	--keyhlcolor=99aaddff \
	--insidecolor=15171d00 \
	--ringvercolor=99aaddff \
	--insidevercolor=15171d00 \
	--ringwrongcolor=dc8195ff \
	--insidewrongcolor=15171d00 \
	--image=$HOME/.cache/lock.png &

while pgrep -x i3lock; do
	[[ 10000 -lt $(xssstate -i) ]] && xset dpms force off;
	sleep 5
done  &>/dev/null
