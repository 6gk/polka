#!/usr/bin/env bash

# $1 = (d)irectory or (f)ile
# $2 = name of alias
# $3 = file or folder to edit / cd to

> ${XDG_CONFIG_HOME:-~/.config}/sh/sc.sh
sed -e '/^#/d' -e "s|~|$HOME|g"  ${XDG_CONFIG_HOME:-~/.config}/sh/sc | tee \
	>(grep '^d' | awk '{print "alias "$2"=\"cd "$3"\""}' >> ${XDG_CONFIG_HOME:-~/.config}/sh/sc.sh)  \
	>(grep '^d' | awk '{print  ""$2"=\""$3"\""}'         >> ${XDG_CONFIG_HOME:-~/.config}/sh/sc.sh)  \
	>(grep '^f' | awk '{print "alias "$2"=\"v "$3"\""}'  >> ${XDG_CONFIG_HOME:-~/.config}/sh/sc.sh) &>/dev/null
