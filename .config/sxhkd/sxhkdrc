###       ###
##  bspwm  ##
###       ###

super + q
	bspc node -k

alt + q
	bspc node -c

alt + c
	bspc node -p cancel

#super + r
#	bspc node -n last.!automatic -t tiled

super + {r,m}
	bspc desktop -l {tiled,monocle}

super + {_,shift} + Escape
	wm {restart,quit}

super + {d,a}
	bspc node -t "~{floating,fullscreen}"

super + {_,ctrl,alt,shift} + {Left,Down,Up,Right}
    {focus,move,resize,bspc node -p} {west,south,north,east}

ctrl + alt + {Left,Right}
	desktop.sh switch {previous,next}

shift + alt + {Left,Right}
	desktop.sh move {previous,next}

shift + alt + {Right,Left}
	DIR={next,prev}; \
	bspc node -d "$DIR"; \
	bspc desktop -f "$DIR"

ctrl + alt + {Right,Left}
	bspc desktop -f {next,prev}

ctrl + super + {F1,F2,F3,F4,F5,F12}
	bspc node -d {1,2,3,4,5,0}

super + {F1,F2,F3,F4,F5,F12}
	bspc desktop -f {1,2,3,4,5,0}

super + Tab
	bspc node -f next

super + shift + Tab
	bspc node -f prev
