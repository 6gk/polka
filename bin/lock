#! [[ -e ~/.cache/lock.png ]] && convert "$wp" -draw "fill #00000044 $rectangles" "$HOME/.cache/lock.png"
# cp $wp ~/.cache/lock.png

i3lock \
	--datestr="%A, %B %e" \
	--timestr="%H:%M" \
	--ring-width=4 \
	--line-uses-inside \
	--radius=30 \
	--indpos="x+(w/2):y+(h/2+60)" \
	--datepos="x+(w/2):y+(h/2)" \
	--timepos="x+(w/2):y+(h/2-50)" \
	--veriftext='' \
	--timesize=70 \
	--datesize=30 \
	--wrongtext='' \
	--clock \
	--indicator \
	--bshlcolor=d86880ff \
	--timecolor=cccceeff \
	--datecolor=cccceeff \
	--ringcolor=8888a0ff \
	--verifcolor=cccceeff \
	--wrongcolor=d86880ff \
	--keyhlcolor=cccceeff \
	--insidecolor=15171d00 \
	--ringvercolor=cccceeff \
	--insidevercolor=15171d00 \
	--ringwrongcolor=dc8195ff \
	--insidewrongcolor=15171d00 \
	--time-font="Roboto Condensed" \
	--date-font="Roboto Condensed" \
	--image=$HOME/.cache/lock.png &

#	--ring-width=4 \
