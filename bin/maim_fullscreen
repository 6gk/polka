#!/bin/bash

dir=~/Stuff/Screenshots/maim
name="maim-$(date +%F_%H:%M:%S)"

mkdir -p "$dir" || exit 1

maim -u "${dir}/${name}.png" &&
    notify-send "Fullscreen screenshot taken at ${dir}/${name}.png"



