super + e
	st -e zsh -c 'source ~/etc/zsh/.zshrc; ncmpcpp'

super + g
	tasks

super + w
	st -g 100x30 -c floating -e nmtui-connect

super + y
	st -e transmission-remote-cli

ctrl + Escape
	xkill

XF86MonBrightness{Down,Up}
	light -{U,A} 10

{super,ctrl} + alt + t
	synclient TouchpadOff={0,1}

super + Return
	st

super + f
	firefox

super + c
	thunar

super + space
	rofi -show run

alt + ctrl + space
	dmenu_run

ctrl + alt + m
	dmenumount

ctrl + alt + u
	dmenuumount

super + i
	rofi-emoji

ctrl + alt + w
	nmcli networking off && nmcli networking on

super + l
	lock

super + {shift + F1,t}
	notify-send \
	"$(date "+%a %d %b - %I:%M %p")" \
	"Desktop: $(bspc query -D -d focused --names)\n\
	Volume: $(amixer -D pulse get Master | grep -o '[0-9][0-9]*%' | head -1)\n\
	$(acpi)"

ctrl + alt + s
	ts.sh

