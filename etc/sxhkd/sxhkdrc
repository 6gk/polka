#
#  ,=,e
#

super + Return
	st

# super + [xg] are free

#{alt + x, XF86Launch6}
#	draw

super + v
	chromium 0.0.0.0:9091

super + slash
	dms ~/opt/scs

super + period
	dmsc

super + space
	launch

super + u
	copy

super + f
	chromium


# power menu
super + h
	pm


# un/mount drives
ctrl + alt + {m,u}
	{_,u}mnt


super + i
	emoji


# restart wifi
ctrl + alt + w
	nmcli networking off && sleep 0.5 && nmcli networking on


# send a notif of the time and battery
super + t
	notify-send "$(date "+%F (%a) - %H:%M")" \
	"$(acpi)"


# change theme
ctrl + alt + s
	ts.sh


#alt + grave
#	dropdown

# I have this key bound on my mouse
XF86Launch6
	hex

ctrl + alt + {1-9,0}
	hw {1-9,0}


#
#   screenshots
#
{_,super} + Print
	scr {-G$(6r f -f),-F}

# selection
{shift + Print, XF86Tools}
	freeze & scr -S; pkill -f freeze
#	freeze & \
#	scr -S; \
#	pkill -f '[ /]freeze'

super + z
	xclip -selection clipboard -t image/png $HOME/opt/x/scr/$(ls \
	-1t $HOME/opt/scr --ignore old | head -1)

super + {Insert, Home, Prior, End}
	scr {-r,-c -p k,-m s -c,-s}


#
#   media
#
XF86Audio{Prev,Next,Play,Stop,Mute}
	vol {prev, next, p, stop, m}

XF86Audio{Raise,Lower}Volume
	vol {up,down}

super + {p, Tab}
	vol {p, mw}

