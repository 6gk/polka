#!/bin/sh
exec 2>/dev/null

[ "$1" = y ] || {
	printf '[press the damn button, fool] '
	read -r y
}

[ "${1:-$y}" = y ] || exit

ln -sf "$HOME/etc/.mozilla/firefox" "$HOME/etc/firefox"

mkdir -p  \
	~/etc   \
	~/src   \
	~/tmp   \
	~/bin/app   \
	~/bin/bin   \
	~/opt/junk  \
	~/opt/apps  \
	~/usr/cache

ln -sf "$PWD/bin/"* ~/bin/
ln -sf "$PWD/etc/"* ~/etc/
ln -sf "$PWD/usr/"* ~/usr/
:
